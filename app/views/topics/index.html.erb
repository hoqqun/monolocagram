<header class="intro-header" style="background-image:url(<%= asset_path "topic-bg.jpg" %>)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>みんなのおきにいり</h1>
          <hr class="small">
          <span class="subheading"></span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <%= link_to "投稿する", new_topic_path, class: 'btn btn-default' %>
      <hr>
      <% @topics.each do |topic| %>
        <div class="post-preview">
          <%= link_to topic_path(topic) do %>
            <h2 class="post-title">
              <%= topic.title %>
            </h2>
            <h3 class="post-subtitle">
            </h3>
          <% end %>
          <p class="post-meta">投稿者 <%= topic.user.name.present? ? topic.user.name : topic.user.email + " (名前を登録していないとメールアドレスを表示します。) " %> , <%= topic.created_at.to_s %> </p>
        </div>
        <% if current_user.id == topic.user.id %>
          <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success' %>
          <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
        <% end %>
        <hr>
      <% end %>
    </div>
  </div>
</div>


