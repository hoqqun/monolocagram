<header class="intro-header" style="background-image:url(<%= asset_path "topic-bg.jpg" %>)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>詳細</h1>
          <hr class="small">
          <span class="subheading"><%= @topic.title %></span>
          <span class="meta">投稿日 <%= @topic.created_at.strftime("%y/%m/%d %p %l:%M") %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <a href="<%= @topic.picture %>" class="thumbnail">
        <%= image_tag(@topic.picture, alt: @topic.title )%>
      </a>
      <p><%= @topic.text %></p>
      <hr>
    </div>
  </div>
</div>

<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, topic: @topic } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, topic: @topic } %>
    <% if current_user.id == @topic.user_id %>
      <%= link_to '編集', edit_topic_path(@topic) %> |
    <% end %>
    <%= link_to '戻る', topics_path %>
  </div>
</div>