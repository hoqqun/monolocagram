<header class="intro-header" style="background-image:url(<%= asset_path "login-bg.jpg" %>)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>確認</h1>
          <hr class="small">
          <span class="subheading"></span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    <%= form_for(@topic) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :text %>
      <%= f.hidden_field :picture %>
      <%= f.hidden_field :picture_cache %>
      <p>タイトル:<%= @topic.title %></p>
      <p>本文:<%= @topic.text %></p>
      <%= image_tag(@topic.picture, alt: @topic.title, class: "trim-image-to-circle") %>
      <%= f.submit "登録",class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@topic, url: new_topic_path, method: 'get', html: {multipart: true}) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :text %>
      <%= f.hidden_field :picture %>
      <%= f.hidden_field :picture_cache %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>