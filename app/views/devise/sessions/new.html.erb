<header class="intro-header" style="background-image:url(<%= asset_path "login-bg.jpg" %>)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="page-heading">
          <h1>ログイン</h1>
          <hr class="small">
          <span class="subheading">下記からログインしてください。</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス", required: true %>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード", required: true %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="row control-group">
            <div class="form-group col-xs-12 controls">
              <%= f.check_box :remember_me %>
              <small><%= f.label :remember_me %></small>
            </div>
          </div>
        <% end %>
        <div id="success"></div>
        <div class="row">
          <div class="form-group col-xs-12">
            <%= f.submit "ログイン", class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>